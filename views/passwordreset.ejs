<%- include ('layouts/main-header.ejs') %>
<div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth">
        <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
                <div class="auth-form-light text-left p-5">
                    <div class="brand-logo">
                        <h1 class="text-center">
                            <span class="logoIcon">M</span><%= title %></h1>
                    </div>
                    <h6 class="font-weight-light text-center">Reset Password Page.</h6>
                    
                    <div class="pt-3 ">
                        <div class="form-group ">
                            <label>New Password</label>
                            <input type="password" class="form-control form-control-lg " id="password" placeholder="New Password" required>
                        </div>

                        <div class="form-group ">
                            <label>Confirm Password</label>
                            <input type="password" class="form-control form-control-lg " id="confirm-password" placeholder="Confirm Password" name = "email" required>
                        </div>

                        <div class="mt-3 ">
                            <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Change Password</button>
                        </div>
                        <div class="text-center mt-4 font-weight-light"> Change of mind? <a href="/login" class="text-primary">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>
<%- include ('layouts/main-footer.ejs') %>
