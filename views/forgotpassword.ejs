<%- include ('layouts/main-header.ejs') %>
<div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth">
        <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
                <div class="auth-form-light text-left p-5">
                    <div class="brand-logo">
                        <h1 class="text-center">
                            <span class="logoIcon">M</span><%= title %></h1>
                    </div>
                    <h6 class="font-weight-light text-center">Reset Password.</h6>
                    <% if (success == 1) { %>
                        <div class="alert alert-success"><strong>Sucess!</strong> Please see you email address for further steps</div>
                    <% } %>
                    <%  if (success == -1) { %>
                        <div class="alert alert-warning"><strong>Error!</strong> An account with the email address you have entered soes not exist please try again!</div>
                    <% } %>
                    <form class="pt-3 " method="POST" action="/forgotpassword">
                        <div class="form-group ">
                            <input type="email " class="form-control form-control-lg " id="emailAddress " placeholder="Email Address" name = "email" required>
                        </div>

                        <div class="mt-3 ">
                            <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">SEND PASSWORD</button>
                        </div>
                        <div class="text-center mt-4 font-weight-light"> Already have an account? <a href="/login" class="text-primary">Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>
<%- include ('layouts/main-footer.ejs') %>
